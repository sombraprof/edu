{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://edu.local/schemas/supplements-index.schema.json",
  "title": "Supplements Index",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "title", "type", "metadata"],
    "additionalProperties": true,
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "type": "string",
        "enum": ["reading", "lab", "project", "slide", "video", "reference"]
      },
      "link": {
        "type": "string",
        "minLength": 1
      },
      "file": {
        "type": "string",
        "minLength": 1
      },
      "available": {
        "type": "boolean"
      },
      "metadata": {
        "type": "object",
        "required": ["generatedBy", "model", "timestamp"],
        "additionalProperties": false,
        "properties": {
          "generatedBy": {
            "type": "string",
            "minLength": 1
          },
          "model": {
            "type": "string",
            "minLength": 1
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
