{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://edu.local/schemas/lesson.schema.json",
  "title": "Normalized Lesson",
  "description": "Schema canônico para aulas normalizadas consumidas pelos renderizadores MD3.",
  "type": "object",
  "additionalProperties": true,
  "required": ["id", "title", "content"],
  "properties": {
    "formatVersion": {
      "type": "string",
      "enum": ["md3.lesson.v1"],
      "description": "Versão da estrutura de aula normalizada."
    },
    "id": {
      "type": "string",
      "pattern": "^lesson-[0-9]{2,}$",
      "description": "Identificador único da aula alinhado ao arquivo no disco (ex.: lesson-01)."
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
      "description": "Slug amigável usado em rotas ou âncoras públicas."
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Título apresentado na navegação e cabeçalho da aula."
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "description": "Descrição curta (1-2 parágrafos) que contextualiza a aula."
    },
    "objective": {
      "type": "string",
      "description": "Objetivo principal herdado do legado."
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Lista de objetivos específicos alinhados à BNCC/ABED."
    },
    "competencies": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Competências estruturantes trabalhadas na aula."
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Habilidades mensuráveis que o estudante deve demonstrar."
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Resultados de aprendizagem observáveis usados em avaliações."
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Tópicos ou materiais que o estudante precisa revisar antes da aula."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      },
      "uniqueItems": true,
      "description": "Marcadores usados em filtros e relatórios."
    },
    "duration": {
      "type": "number",
      "exclusiveMinimum": 0,
      "description": "Duração estimada em minutos para atividades síncronas/assíncronas."
    },
    "modality": {
      "type": "string",
      "enum": ["in-person", "remote", "hybrid", "async"],
      "description": "Modalidade principal de entrega da aula."
    },
    "resources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["label", "url"],
        "properties": {
          "label": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "description": "Materiais complementares obrigatórios da aula."
    },
    "bibliography": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Referências bibliográficas formatadas."
    },
    "assessment": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "rubric": {
          "type": "string",
          "minLength": 1
        }
      },
      "description": "Resumo da estratégia avaliativa vinculada à aula."
    },
    "content": {
      "type": "array",
      "minItems": 1,
      "description": "Blocos semânticos renderizados pelos componentes MD3.",
      "items": {
        "$ref": "#/$defs/contentBlock"
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "status": {
          "type": "string",
          "enum": ["draft", "in-review", "published"]
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "owners": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      },
      "description": "Metadados operacionais usados por governança e pipelines."
    }
  },
  "$defs": {
    "contentBlock": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1,
          "description": "Identificador do componente responsável por renderizar o bloco."
        }
      },
      "allOf": [
        { "$ref": "#/$defs/definitionCardBlock" },
        { "$ref": "#/$defs/comparativeTableBlock" },
        { "$ref": "#/$defs/systemDiagramBlock" },
        { "$ref": "#/$defs/codeChallengeBlock" },
        { "$ref": "#/$defs/memoryVisualizerBlock" },
        { "$ref": "#/$defs/caseStudyBlock" },
        { "$ref": "#/$defs/statCardBlock" },
        { "$ref": "#/$defs/knowledgeCheckBlock" },
        { "$ref": "#/$defs/interactiveDemoBlock" },
        { "$ref": "#/$defs/pedagogicalNoteBlock" },
        { "$ref": "#/$defs/imageFigureBlock" },
        { "$ref": "#/$defs/modelViewerBlock" },
        { "$ref": "#/$defs/promptTipBlock" },
        { "$ref": "#/$defs/codeSubmissionBlock" },
        { "$ref": "#/$defs/dragAndDropBlock" },
        { "$ref": "#/$defs/conceptMapperBlock" },
        { "$ref": "#/$defs/bugFixChallengeBlock" },
        { "$ref": "#/$defs/dataEntryFormBlock" },
        { "$ref": "#/$defs/scenarioBuilderBlock" },
        { "$ref": "#/$defs/peerReviewTaskBlock" },
        { "$ref": "#/$defs/testGeneratorBlock" },
        { "$ref": "#/$defs/rubricDisplayBlock" },
        { "$ref": "#/$defs/selfAssessmentBlock" },
        { "$ref": "#/$defs/whiteboardBlock" },
        { "$ref": "#/$defs/slideDeckBlock" },
        { "$ref": "#/$defs/dualAssessmentBlock" },
        { "$ref": "#/$defs/videoAnnotationBlock" }
      ]
    },
    "imageSource": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "src": { "type": "string", "minLength": 1 },
        "srcset": { "type": "string", "minLength": 1 },
        "type": { "type": "string" },
        "media": { "type": "string" },
        "sizes": { "type": "string" },
        "descriptor": { "type": "string" },
        "width": { "type": "number", "exclusiveMinimum": 0 },
        "density": { "type": "number", "exclusiveMinimum": 0 }
      },
      "anyOf": [{ "required": ["src"] }, { "required": ["srcset"] }]
    },
    "whiteboardImage": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "src": { "type": "string", "minLength": 1 },
        "alt": { "type": "string" },
        "width": { "type": "number", "exclusiveMinimum": 0 },
        "height": { "type": "number", "exclusiveMinimum": 0 }
      },
      "required": ["src"]
    },
    "whiteboardCommand": {
      "type": "object",
      "additionalProperties": true,
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "delayMs": { "type": "number", "minimum": 0 },
        "state": { "type": ["object", "string"] },
        "description": { "type": "string" }
      }
    },
    "whiteboardSnapshot": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "durationMs": { "type": "number", "minimum": 0 },
        "state": { "type": ["object", "string"] },
        "json": { "type": ["object", "string"] },
        "snapshot": { "type": ["object", "string"] },
        "fabric": { "type": ["object", "string"] },
        "commands": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/whiteboardCommand" }
        },
        "image": { "$ref": "#/$defs/whiteboardImage" }
      },
      "anyOf": [
        { "required": ["state"] },
        { "required": ["json"] },
        { "required": ["snapshot"] },
        { "required": ["fabric"] },
        { "required": ["commands"] },
        { "required": ["image"] }
      ]
    },
    "whiteboardBlock": {
      "if": {
        "properties": { "type": { "const": "whiteboard" } }
      },
      "then": {
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "height": { "type": "number", "exclusiveMinimum": 0 },
          "backgroundColor": { "type": "string", "minLength": 1 },
          "allowOfflineEdit": { "type": "boolean" },
          "image": { "$ref": "#/$defs/whiteboardImage" },
          "playback": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "autoplay": { "type": "boolean" },
              "delayMs": { "type": "number", "minimum": 0 },
              "loop": { "type": "boolean" }
            }
          },
          "snapshots": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/$defs/whiteboardSnapshot" }
          }
        },
        "anyOf": [{ "required": ["snapshots"] }, { "required": ["image"] }]
      }
    },
    "slideDeckBlock": {
      "if": {
        "properties": { "type": { "const": "slideDeck" } }
      },
      "then": {
        "required": ["sourceType"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "sourceType": {
            "type": "string",
            "enum": ["external", "reveal", "mdx"]
          },
          "url": { "type": "string", "format": "uri" },
          "slidesPath": { "type": "string", "minLength": 1 },
          "downloadUrl": { "type": "string", "format": "uri" },
          "notes": { "type": "string" },
          "height": { "type": "number", "exclusiveMinimum": 0 },
          "initialSlide": { "type": "number", "minimum": 1 },
          "allowOpenInNewTab": { "type": "boolean" }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "sourceType": { "const": "external" }
              }
            },
            "then": { "required": ["url"] }
          },
          {
            "if": {
              "properties": {
                "sourceType": { "enum": ["reveal", "mdx"] }
              }
            },
            "then": { "required": ["slidesPath"] }
          }
        ]
      }
    },
    "videoAnnotationCaption": {
      "type": "object",
      "additionalProperties": true,
      "required": ["src"],
      "properties": {
        "src": { "type": "string", "format": "uri" },
        "label": { "type": "string", "minLength": 1 },
        "srclang": { "type": "string", "minLength": 2 },
        "default": { "type": "boolean" }
      }
    },
    "videoAnnotationQuestionOption": {
      "type": "object",
      "additionalProperties": true,
      "required": ["id", "text"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "text": { "type": "string", "minLength": 1 },
        "correct": { "type": "boolean" }
      }
    },
    "videoAnnotationQuestion": {
      "type": "object",
      "additionalProperties": true,
      "required": ["prompt", "options"],
      "properties": {
        "prompt": { "type": "string", "minLength": 1 },
        "explanation": { "type": "string" },
        "multiple": { "type": "boolean" },
        "options": {
          "type": "array",
          "minItems": 2,
          "items": { "$ref": "#/$defs/videoAnnotationQuestionOption" }
        }
      }
    },
    "videoAnnotationAnnotation": {
      "type": "object",
      "additionalProperties": true,
      "required": ["label", "time"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "time": { "type": "number", "minimum": 0 },
        "type": { "type": "string", "enum": ["note", "question"] },
        "body": { "type": "string" },
        "question": { "$ref": "#/$defs/videoAnnotationQuestion" }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "question" } }
          },
          "then": { "required": ["question"] }
        }
      ]
    },
    "videoAnnotationCheckpoint": {
      "type": "object",
      "additionalProperties": true,
      "required": ["label", "time"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "label": { "type": "string", "minLength": 1 },
        "time": { "type": "number", "minimum": 0 },
        "description": { "type": "string" }
      }
    },
    "videoAnnotationBlock": {
      "if": {
        "properties": { "type": { "const": "videoAnnotation" } }
      },
      "then": {
        "required": ["video"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "video": {
            "type": "object",
            "additionalProperties": true,
            "required": ["provider"],
            "properties": {
              "provider": {
                "type": "string",
                "enum": ["youtube", "vimeo", "html5"]
              },
              "url": { "type": "string", "format": "uri" },
              "videoId": { "type": "string", "minLength": 1 },
              "src": { "type": "string", "format": "uri" },
              "type": { "type": "string", "minLength": 1 },
              "poster": { "type": "string", "format": "uri" },
              "captions": {
                "type": "array",
                "items": { "$ref": "#/$defs/videoAnnotationCaption" }
              }
            },
            "allOf": [
              {
                "if": { "properties": { "provider": { "const": "html5" } } },
                "then": { "required": ["src"] }
              },
              {
                "if": { "properties": { "provider": { "enum": ["youtube", "vimeo"] } } },
                "then": {
                  "anyOf": [{ "required": ["videoId"] }, { "required": ["url"] }]
                }
              }
            ]
          },
          "annotations": {
            "type": "array",
            "items": { "$ref": "#/$defs/videoAnnotationAnnotation" }
          },
          "checkpoints": {
            "type": "array",
            "items": { "$ref": "#/$defs/videoAnnotationCheckpoint" }
          }
        }
      }
    },
    "imageFigureBlock": {
      "if": {
        "properties": { "type": { "const": "imageFigure" } }
      },
      "then": {
        "properties": {
          "src": { "type": "string", "minLength": 1 },
          "srcset": { "type": "string", "minLength": 1 },
          "sizes": { "type": "string" },
          "alt": { "type": "string" },
          "caption": { "type": "string" },
          "credit": { "type": "string" },
          "lightbox": { "type": "boolean" },
          "sources": {
            "type": "array",
            "items": { "$ref": "#/$defs/imageSource" }
          },
          "images": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "src": { "type": "string", "minLength": 1 },
                "srcset": { "type": "string", "minLength": 1 },
                "sizes": { "type": "string" },
                "alt": { "type": "string" },
                "caption": { "type": "string" },
                "credit": { "type": "string" },
                "lightbox": { "type": "boolean" },
                "sources": {
                  "type": "array",
                  "items": { "$ref": "#/$defs/imageSource" }
                }
              },
              "anyOf": [
                { "required": ["src"] },
                { "required": ["srcset"] },
                { "required": ["sources"] }
              ]
            }
          }
        },
        "anyOf": [{ "required": ["src"] }, { "required": ["images"] }]
      }
    },
    "modelViewerBlock": {
      "if": {
        "properties": { "type": { "const": "modelViewer" } }
      },
      "then": {
        "required": ["src"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "footnote": { "type": "string" },
          "src": {
            "type": "string",
            "minLength": 1,
            "anyOf": [
              { "format": "uri" },
              {
                "pattern": "^(?:\\.{1,2}/)?[A-Za-z0-9@/_\\-.]+\\.(?:gltf|glb)(?:[#?].*)?$"
              }
            ]
          },
          "poster": { "type": "string", "minLength": 1 },
          "iosSrc": {
            "type": "string",
            "minLength": 1,
            "anyOf": [
              { "format": "uri" },
              { "pattern": "^(?:\\.{1,2}/)?[A-Za-z0-9@/_\\-.]+\\.usdz(?:[#?].*)?$" }
            ]
          },
          "alt": { "type": "string" },
          "autoRotate": { "type": "boolean" },
          "autoRotateDelay": { "type": "number", "minimum": 0 },
          "cameraControls": { "type": "boolean" },
          "ar": { "type": "boolean" },
          "arModes": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["webxr", "scene-viewer", "quick-look"]
            },
            "uniqueItems": true,
            "minItems": 1
          },
          "shadowIntensity": { "type": "number", "minimum": 0 },
          "exposure": { "type": "number", "minimum": 0 },
          "environmentImage": {
            "type": "string",
            "minLength": 1,
            "anyOf": [
              { "format": "uri" },
              { "pattern": "^(?:\\.{1,2}/)?[A-Za-z0-9@/_\\-.]+\\.(?:hdr|exr)(?:[#?].*)?$" }
            ]
          },
          "cameraOrbit": { "type": "string", "minLength": 1 },
          "cameraTarget": { "type": "string", "minLength": 1 },
          "interactionPrompt": { "type": "string" },
          "interactionPromptStyle": {
            "type": "string",
            "enum": ["auto", "basic", "none"]
          },
          "reveal": { "type": "string", "enum": ["auto", "interaction"] },
          "loading": { "type": "string", "enum": ["auto", "lazy", "eager"] },
          "touchAction": { "type": "string", "minLength": 1 },
          "zoom": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "min": {
                "anyOf": [
                  { "type": "number", "exclusiveMinimum": 0 },
                  { "type": "string", "minLength": 1 }
                ]
              },
              "max": {
                "anyOf": [
                  { "type": "number", "exclusiveMinimum": 0 },
                  { "type": "string", "minLength": 1 }
                ]
              },
              "initial": {
                "anyOf": [
                  { "type": "number", "exclusiveMinimum": 0 },
                  { "type": "string", "minLength": 1 }
                ]
              },
              "disable": { "type": "boolean" },
              "disabled": { "type": "boolean" }
            }
          },
          "height": {
            "anyOf": [
              { "type": "number", "exclusiveMinimum": 0 },
              { "type": "string", "minLength": 1 }
            ]
          },
          "aspectRatio": {
            "anyOf": [
              { "type": "number", "exclusiveMinimum": 0 },
              { "type": "string", "minLength": 1 }
            ]
          },
          "loadingLabel": { "type": "string", "minLength": 1 },
          "errorLabel": { "type": "string", "minLength": 1 }
        },
        "allOf": [
          {
            "if": {
              "properties": { "ar": { "const": true } }
            },
            "then": { "required": ["arModes"] }
          }
        ]
      }
    },
    "dualAssessmentBlock": {
      "if": {
        "properties": { "type": { "const": "dualAssessment" } }
      },
      "then": {
        "required": ["theory", "practice"],
        "properties": {
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "theory": {
            "type": "object",
            "allOf": [{ "$ref": "#/$defs/knowledgeCheckBlock/then" }],
            "properties": {
              "type": { "const": "knowledgeCheck" }
            }
          },
          "practice": {
            "type": "object",
            "allOf": [{ "$ref": "#/$defs/codeSubmissionBlock/then" }],
            "properties": {
              "type": { "const": "codeSubmission" }
            }
          }
        }
      }
    },
    "definitionCardBlock": {
      "if": {
        "properties": { "type": { "const": "definitionCard" } }
      },
      "then": {
        "required": ["term", "definition"],
        "properties": {
          "term": { "type": "string", "minLength": 1 },
          "definition": { "type": "string", "minLength": 1 },
          "source": { "type": "string", "minLength": 1 },
          "sourceUrl": { "type": "string", "format": "uri" }
        }
      }
    },
    "comparativeTableBlock": {
      "if": {
        "properties": { "type": { "const": "comparativeTable" } }
      },
      "then": {
        "required": ["headers", "rows"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "caption": { "type": "string" },
          "leadingColumnLabel": { "type": "string" },
          "headers": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "rows": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["label", "values"],
              "properties": {
                "label": { "type": "string", "minLength": 1 },
                "values": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "systemDiagramBlock": {
      "if": {
        "properties": { "type": { "const": "systemDiagram" } }
      },
      "then": {
        "required": ["nodes"],
        "properties": {
          "title": { "type": "string" },
          "summary": { "type": "string" },
          "nodes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "label"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "label": { "type": "string", "minLength": 1 },
                "description": { "type": "string" }
              }
            }
          },
          "connections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["from", "to"],
              "properties": {
                "from": { "type": "string", "minLength": 1 },
                "to": { "type": "string", "minLength": 1 },
                "label": { "type": "string" }
              }
            }
          },
          "legend": {
            "type": "array",
            "items": { "type": "string" }
