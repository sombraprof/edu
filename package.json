{
  "name": "edu",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview --base /edu/",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "simple-git-hooks",
    "scaffold:lesson": "node scripts/scaffold-lesson.mjs",
    "validate:content": "node scripts/validate-content.mjs",
    "validate:report": "node scripts/validate-content.mjs --report",
    "report:observability": "node scripts/report-content-metrics.mjs",
    "report:observability:check": "node scripts/report-content-metrics.mjs --check"
  },
  "dependencies": {
    "@vueuse/head": "^2.0.0",
    "lucide-vue-next": "^0.472.0",
    "turndown": "^7.2.1",
    "vite": "^7.1.6",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.3.0",
    "markdown-it": "^14.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.3",
    "prismjs": "^1.30.0",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.0"
  },
  "lint-staged": {
    "**/*.{vue,ts,tsx,js,jsx,cjs,mjs,json,md,css,scss}": "prettier --check",
    "src/content/**/*.{json,vue}": "npm run validate:content --"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
